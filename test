// 1. ID async code (returns Promise), preface w 'async'
// 2. ID statements returning Promise, preface w 'await' & set to var

async function fetchAlbums() {
  const res = await fetch('http://rallycoding.herokuapp.com/api/music_albums')
  const json = await res => res.json())
  console.log(json)
}

fetchAlbums();
